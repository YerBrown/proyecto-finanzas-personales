extends layout.pug

block content
    link(rel="stylesheet" href="/css/loginStyles.css")



    
    div.login-box
        h2 Login
        form.login-form(action="/login" method="POST")

            
            label(for="email") User login
            input#username(type="email" placeholder="example@mail.com" name="email", required)

            
            label(for="password") Password
            input#password(type="password" placeholder="Password" name="password",required)



           
            button.login-button(type="submit") Entrar

          
            a(href='/register')    
                button.azure-button(type="button") Registro
                


