extends ../layout 

block content
    link(rel="stylesheet" href="/css/loginStyles.css")



    
    div.login-box
        h2 Login
        form.login-form(action="/login" method="POST")

          
            label(for="username") User login
            input#username(type="email" placeholder="example@mail.com" required)

           
            label(for="password") Password
            input#password(type="password" placeholder="Password" required)



            
            button.login-button(type="submit") Entrar

            
            button.azure-button(type="button") 
                | Registro