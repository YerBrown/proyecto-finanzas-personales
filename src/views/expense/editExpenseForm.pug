extends ../layout

block styles
        link(rel="stylesheet", href="/css/add-edit-remove-expense-income.css")

block content
    form(action="/expense/update/"+currentExpense.id method='POST' id='add-transaction-parent' class='transaction-menu')
        div(class='window-header')
            h2 Editar Gasto 
        div(class='window-container')
            div(id='title-field' class='transaction-field')
                label(for="title") Titulo:      
                input(type="text" id="title" name="title" maxlength="50" placeholder='Titulo' value=currentExpense.title required  )
            div(id='amount-field' class='transaction-field')
                label(for="amount") Cantidad:
                div(id='amount-input')
                    p -
                    input(<input type="number" name='amount' id='amount' min='0' step="0.01" oninput="limitDecimalPlaces()" placeholder="0.00" value=currentExpense.amount required)
                    p &euro;
            div(id='date-time-field' class='transaction-field')
                label(for="date-time") Fecha:
                input(type="datetime-local" id="datetime" name="datetime" value=currentExpense.datetime required)
            div(id='expense-type-field' class='transaction-field')
                label(for="type_id") Categoria:
                select( id="expense-type" name="type_id")
                    each type in types 
                        option(class="type-option", value=type.id selected=(currentExpense.type_id == type.id))= type.name 
            div(id='comment-field' class='transaction-field')
                label(for="comment") Comentario:      
                textarea(id='comment-field' class='transaction-field' name="comment" rows="4" cols="50" maxlength="200" placeholder='Comentario')=currentExpense.comment
            div(id='submits_field' class='transaction-field')
                button(type="button" onclick="window.location.href='/transaction'") Cancelar
                button(type="submit" class='submit-button') Actualizar Gasto
                button(type="button" onclick=`removeExpense(${currentExpense.id})`  class='remove-button') Borrar Gasto


    script.
        function limitDecimalPlaces() {
            document.getElementById('amount').addEventListener('change', function () {
                const input = this;
                let valor = input.value;
                valor = valor.replace('-', '');
                let [integerPart, decimalPart] = valor.split('.');
                if (integerPart.length > 9) {
                    integerPart = integerPart.slice(0, 9);
                }
                if (decimalPart && decimalPart.length > 2) {
                    decimalPart = decimalPart.slice(0, 2);
                }
                input.value = decimalPart ? `${integerPart}.${decimalPart}` : integerPart;
            });
        }
        function removeExpense(id) {
            // Crear un formulario de manera dinámica
            const form = document.createElement('form');
            form.method = 'POST';
            form.action = '/expense/remove/' + id;

            // Añadir el formulario al cuerpo y enviarlo
            document.body.appendChild(form);
            form.submit();
        }